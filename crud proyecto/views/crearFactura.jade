html
	head
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title CRUD
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
		
	body
		block content
			.main.container
				.row
					.col-md-6.col-md-offset-3
						h1.display-4.m-b-2 Crear Factura
						form(method='POST' action='/crearFactura')
							
							div.form-group
								label(for='usuario_id') Id Usuario:
								input.form-control(type='text' name='usuario_id')
							div.form-group
								label(for='producto_id') Id Producto:
								input.form-control(type='text' name='producto_id')
							div.form-group
								label(for='nro_comprobante') Numero de Comprobante:
								input.form-control(type='text' name='nro_comprobante')
							div.form-group
								label(for='fecha') Fecha:
								input.form-control(type='text' name='fecha')
							div.form-group
								label(for='detalles') Detalles:
								input.form-control(type='text' name='detalles')
							div.form-group
								label(for='total') Total:
								input.form-control(type='text' name='total')
								div#labelSub
							button.btn.btn-success(type='submit') Guardar Factura
