html
	head
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title CRUD
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
	body
		block content
			.main.container
				.row
					.col-md-6.col-md-offset-3
						table.table.table-dark
							thead.thead-dark
								tr
									th
										h1.display-4.m-b-2 Pedidos
										a(href="/crearPedido") Nuevo Pedido
								tr
									th ID
									th Id Usuario
									th Estado
									th Fecha de pedido
									th Precio
									th EDITAR
									th ELIMINAR
							tbody
								for item in data
									tr
										td= item._id
										td= item.usuario_id
										td= item.estado
										td= item.fecha_pedido
										td= item.precio
										
										td
											form(method='POST' action='/editarViewPedido' )
												input(type='hidden'  name='_id' value=item._id)
												input(type='submit'  value='Editar') 
										td
											form(method='POST' action='/eliminarPedido')
												input(type='hidden' name='_id' value=item._id)
												input(type='submit' value='Eliminar')